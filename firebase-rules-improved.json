{
  "rules": {
    "meetings": {
      "$meetingId": {
        "pins": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "directPins": {
          "$userId": {
            ".read": "auth != null && auth.uid == $userId",
            "$pinId": {
              ".write": "auth != null && (auth.uid == $userId || newData.child('createdBy/uid').val() == auth.uid)"
            }
          }
        }
      }
    }
  }
} 