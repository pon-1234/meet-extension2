{
  "rules": {
    "meetings": {
      "$meetingId": {
        "pins": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "directPins": {
          "$userId": {
            ".read": "auth != null && auth.uid == $userId",
            ".write": "auth != null"
          }
        }
      }
    }
  }
} 